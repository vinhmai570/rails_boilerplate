<%= form_with(url: admin_sign_in_path, class: "card card-md") do |form| %>
  <div class="card-body">
    <h1 class="card-title text-center mb-4">Login to your account</h1>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, value: params[:email_hint], placeholder: "Enter email", autofocus: true, required: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="mb-2">
      <div class="d-flex justify-content-between">
        <%= form.label :password, class: "form-label" %>
        <span class="form-label-description">
          <%= link_to "I forgot password", new_admin_password_reset_path %>
        </span>
      </div>
      <%= form.password_field :password, placeholder: "Password", required: true, autocomplete: "current-password", class:"form-control" %>
    </div>
    <div class="form-footer">
      <%= form.submit "Sign in", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
